{
  "collectionName": "components_blocks_work_blocks",
  "info": {
    "displayName": "Work Block",
    "description": "Display work items (projects, case studies, services, etc.) with filtering by category"
  },
  "options": {},
  "attributes": {
    "filterByCategories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::work-category.work-category"
    },
    "showAllCategories": {
      "type": "boolean",
      "default": true
    },
    "showFeaturedOnly": {
      "type": "boolean",
      "default": false
    },
    "limit": {
      "type": "integer",
      "default": 12
    },
    "columns": {
      "type": "enumeration",
      "enum": [
        "2",
        "3",
        "4"
      ],
      "default": "3",
      "required": true
    },
    "showFilters": {
      "type": "boolean",
      "default": true
    },
    "layout": {
      "type": "enumeration",
      "enum": [
        "grid",
        "masonry",
        "list"
      ],
      "default": "grid"
    }
  },
  "config": {}
}
